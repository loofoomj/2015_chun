<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"

    android:background="#ffffff"
    android:weightSum="1">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:background="#2fc3ea">

        <ImageButton
            android:layout_width="@dimen/width_size"
            android:layout_height="@dimen/height_size"
            android:layout_weight="1"
            android:background="#00000000"
            android:padding="0sp"
            android:scaleType="centerCrop"
            android:src="@drawable/home"
            android:id="@+id/button1" />

        <ImageButton
            android:layout_width="@dimen/width_size"
            android:layout_height="@dimen/height_size"
            android:layout_weight="1"
            android:background="#00000000"
            android:padding="0sp"
            android:scaleType="centerCrop"
            android:src="@drawable/list"
            android:id="@+id/button2" />


        <ImageButton
            android:layout_width="@dimen/width_size"
            android:layout_height="@dimen/height_size"
            android:layout_weight="1"
            android:background="#00000000"
            android:padding="0sp"
            android:scaleType="centerCrop"
            android:src="@drawable/atm_s"
            android:id="@+id/button3" />

        <ImageButton
            android:layout_width="@dimen/width_size"
            android:layout_height="@dimen/height_size"
            android:layout_weight="1"
            android:background="#00000000"
            android:padding="0sp"
            android:scaleType="centerCrop"
            android:src="@drawable/comm"
            android:id="@+id/button4" />

        <ImageButton
            android:layout_width="@dimen/width_size"
            android:layout_height="@dimen/height_size"
            android:layout_weight="1"
            android:background="#00000000"
            android:padding="0sp"
            android:scaleType="centerCrop"
            android:src="@drawable/sett"
            android:id="@+id/button5"/>


    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000000"
            android:text="ATM 화면 입니다"
            android:id="@+id/textView2"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>

</LinearLayout>
